<section class="landing-page">
    <div class="landing-page__image">
      <img
        src="{{ section.settings.landing_page_image | img_url: '1400x' }}"
        loading="lazy"
        alt="{{ section.settings.landing_page_image.alt | escape }}"
        width="1400px"
      >    
    </div>
    {% comment %} <div class="landing-page__text-box">
      <h1>TEXT BOX</h1>
      <p>
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quos,
        eligendi.
      </p>
    </div> {% endcomment %}
  </section>
    
  {% schema %}
    {
      "name": "Landing Page",
      "settings": [
        {
          "id": "landing_page_image",
          "type": "image_picker",
          "label": "Landing Page Image"
        }
      ],
      "presets": [
        {
          "name": "_Custom Landing Page",
          "category": "Image"
        }
      ]
    }
  {% endschema %}