
<footer class="custom-footer">
    <div class="container">
      <div class="row">
        <div class="col-1-of-3">
          <div class="footer__logo">
            <img
              src="{{ section.settings.image | img_url: '100x' }}"
              loading="lazy"
              alt="{{ section.settings.image.alt | escape }}"
              width="150px"
              height="150px"
            >
          </div>
        </div>
        <div class="col-1-of-3">
          <div class="footer__nav-links">
            <h1 class="heading-footer u-margin-bottom-small">
              <span>Explore</span>
            </h1>
            <ul>
              <li>
                <a href="#">Home</a>
              </li>
              <li>
                <a href="#">Story</a>
              </li>
              <li>
                <a href="#">Shop</a>
              </li>
              <li>
                <a href="#">Contact</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-1-of-3">
          <div class="footer__social-media-links">
            <h1 class="heading-footer u-margin-bottom-small">
              <span>Follow Us</span>
            </h1>
            <ul>
              <li>Facebook</li>
              <li>Instagram</li>
              <li>LinkedIn</li>
              <li>Twitter</li>
            </ul>
          </div>
        </div>
  
      </div>
  
  
      <div class="row">
        <div class="footer__copyright u-center-text">
          Ant Software Dev &copy; 2021
        </div>
      </div>
    </div>
  </footer>

  <section class="section-slide-show">
    <!--  SLIDESHOW -->
    <div class="slideshow">
      <div class="slideshow__slides fade">
        <div class="slideshow__number">1 / 3</div>
        <img
            src="{{ section.settings.image | img_url: '1200x' }}"
            loading="lazy"
            alt="{{ section.settings.image.alt | escape }}"
            width="1200px"
            height="150px"
          >
        <div class="slideshow__text">Caption Text</div>
      </div>

      <div class="slideshow__slides fade">
        <div class="slideshow__number">2 / 3</div>
        <img
            src="{{ section.settings.image2 | img_url: '1200x' }}"
            loading="lazy"
            alt="{{ section.settings.image2.alt | escape }}"
            width="1200px"
            height="150px"
          >
        <div class="slideshow__text">Caption Two</div>
      </div>

      <div class="slideshow__slides fade">
        <div class="slideshow__number">3 / 3</div>
        <img
            src="{{ section.settings.image3 | img_url: '1200x' }}"
            loading="lazy"
            alt="{{ section.settings.image3.alt | escape }}"
            width="1200px"
            height="150px"
          >
        <div class="slideshow__text">Caption Three</div>
      </div>

      <!-- LINE BREAK -->
      <br />
    </div>
    <!-- THREE DOTS -->
    <div class="dots">
      <span class="dots__dot"></span>
      <span class="dots__dot"></span>
      <span class="dots__dot"></span>
    </div>
  </section>
    
    {% schema %}
      {
        "name": "Slider",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image Banner"
          },
          {
            "id": "image2",
            "type": "image_picker",
            "label": "Image Banner 2"
          },
          {
            "id": "image3",
            "type": "image_picker",
            "label": "Image Banner 3"
          }
        ],
        "presets": [
          {
            "name": "_Custom Slider",
            "category": "slider"
          }
        ]
      }
    {% endschema %}