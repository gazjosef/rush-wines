{% comment %} {{ 'custom-footer.css' | asset_url | stylesheet_tag }} {% endcomment %}

<footer class="custom-footer">
  <div class="container">
    <div class="row">
      <div class="col-1-of-3">
        <div class="footer__logo">
      <img
        sizes="{% if section.settings.image_2 != blank and section.settings.stack_images_on_mobile %}(min-width: 750px) 50vw, 100vw{% elsif section.settings.image_2 != blank %}50vw{% else %}100vw{% endif %}"
        src="{{ section.settings.image | img_url: '100x' }}"
        loading="lazy"
        alt="{{ section.settings.image.alt | escape }}"
        width="100px"
        height="100px"
      >
          <h3 class="heading-footer">Rush Wines</h3>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
            Quibusdam nobis sunt eius.
          </p>
        </div>
      </div>
      <div class="col-1-of-3">
        <div class="footer__nav-links">
          <h1 class="heading-footer u-margin-bottom-small">
            <span>Our Services</span>
          </h1>
          <ul>
            <li>
              <a href="#">Home</a>
            </li>
            <li>
              <a href="#">Getting Started</a>
            </li>
            <li>
              <a href="#">Product</a>
            </li>
            <li>
              <a href="#">Company</a>
            </li>
            <li>
              <a href="#">Pricing</a>
            </li>
            <li>
              <a href="#">Exchange</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-1-of-3">
        <div class="footer__social-media-links">
          <h1 class="heading-footer u-margin-bottom-small">
            <span>Follow Us</span>
          </h1>
          <ul>
            <li>Facebook</li>
            <li>Instagram</li>
            <li>LinkedIn</li>
            <li>Twitter</li>
          </ul>
        </div>
      </div>

    </div>


    <div class="row">
      <div class="footer__copyright u-center-text">
        Ant Software Dev &copy; 2021
      </div>
    </div>
  </div>
</footer>
  
  {% schema %}
    {
      "name": "Footer",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image Banner"
        }
      ],
      "presets": [
        {
          "name": "Custom Footer",
          "category": "Image"
        }
      ]
    }
  {% endschema %}